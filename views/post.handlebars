<h2 class="dashUser">{{user.userName}}</h2>

<div value="{{post.id}}" class="post">
  <article class="postTitle">
    <header><h2>{{post.title}}</h2> Posted by {{post.user.userName}} on {{format_date post.date_created}}</header>
    <main>
      {{post.content}}
    </main>
  </article>

  <h3>Comments</h3>

  {{#each post.comments as |comment|}}

    <div value="{{comment.id}}" class="post">
      <div class="postContent">
        <div>
          <h5>{{comment.content}}</h5>
          <h6> --- {{comment.user.userName}}</h6>
        </div>
        <h6>{{format_date comment.date_created}}</h6>
      </div>
    </div>

  {{/each}}

  {{#if logged_in}}
    <textarea class="commentInput"></textarea>
    <button class="commentBtn">Add a comment</button>
  {{/if}}
  {{!-- <h6>Posted On: <br> {{format_date post.date_created}}</h6> --}}
</div>

