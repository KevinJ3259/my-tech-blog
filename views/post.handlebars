<h2 class="dashUser">{{user.userName}}</h2>

<div value="{{post.id}}" class="post">
  <div class="postTitle">
    <h1>{{post.title}}</h1>
    <h6>{{format_date post.date_created}}</h6>
  </div>
  <div class="postContent">
    <h5>{{post.content}}</h5>
  </div>

  <h3>Comments</h3>
  {{#if logged_in}}
    <textarea class="commentInput"></textarea>
    <button class="commentBtn">Add a comment</button>
  {{/if}}
  {{!-- <h6>Posted On: <br> {{format_date post.date_created}}</h6> --}}
</div>

